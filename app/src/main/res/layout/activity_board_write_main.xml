<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_main"
    android:orientation="vertical"
    tools:context="com.example.adult.post.BoardWirteMain">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="게시글 작성"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/writeList_btn1"
            android:layout_width="46dp"
            android:layout_height="48dp"
            android:background="@drawable/view_list"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius_layout">

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:hint="제목"
            android:singleLine="true"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/write_edit"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="16dp"
            android:background="@null"
            android:hint="아이에 대한 고민이나 소소한 일상, 정보를 \n공유해보세"
            android:textAlignment="gravity"
            android:gravity="top"/>

        <Button
            android:id="@+id/writeAdd_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/a_main"
            android:text="등록하기"
            android:textColor="@color/a_sub1"
            android:textSize="20dp"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>

