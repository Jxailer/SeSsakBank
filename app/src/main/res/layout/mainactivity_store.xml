<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="733dp"
    android:background="#FEFFE7"
    tools:context=".wishStore.store_main">

    <!--참 잘했어요 샵 레이아웃-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="100dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단바 구성 -->
        <LinearLayout
            android:id="@+id/topBar_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/topBar_rectangle"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bar_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

        </LinearLayout>

        <!--참 잘했어요-->
        <TextView
            android:id="@+id/goodboy"
            android:layout_width="183dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="참 잘했어요 샵 "
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/topBar_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBar_layout" />
        <!--도장 갯수 표시-->
        <TextView
            android:id="@+id/stampAmount"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_gravity="left"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="20"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/topBar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/topBar_layout" />

        <!--상단바 이미지-->
            <!--웃는 표시-->
        <ImageView
            android:id="@+id/smilely"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@+id/topBar_layout"
            app:layout_constraintStart_toEndOf="@+id/goodboy"
            app:layout_constraintTop_toTopOf="@+id/topBar_layout"
            app:srcCompat="@drawable/smile" />

            <!--스템프-->
        <ImageView
            android:id="@+id/stamp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/topBar_layout"
            app:layout_constraintEnd_toStartOf="@+id/stampAmount"
            app:layout_constraintTop_toTopOf="@+id/topBar_layout"
            app:srcCompat="@drawable/guarantee" />

        <!--상품 목록(게임아이템)-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameItemConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBar_layout">

            <!-- 상품 카테고리(게임 아이템)-->
            <Button
                android:id="@+id/gameItem_category"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#00ff0000"
                android:text="게임아이템"
                android:textColor="#4A4A4A"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?android:attr/borderlessButtonStyle"/>

            <!--구분선-->
            <View
                android:id="@+id/view"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8F8F8F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameItem_category" />

            <!--물-->

            <!--햇살-->
            <ImageView
                android:id="@+id/water_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/water"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameItem_category" />

            <ImageView
                android:id="@+id/sunshine_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/sunshine"
                app:layout_constraintEnd_toStartOf="@+id/fertile_item"
                app:layout_constraintStart_toEndOf="@+id/water_item"
                app:layout_constraintTop_toTopOf="parent" />

            <!--구매하기 버튼-->

            <ImageView
                android:id="@+id/fertile_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="92dp"
                android:src="@drawable/fertilizer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sunshine_item"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/itemBuy_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:backgroundTint="#EAEAEA"
                android:text="도장 1개"
                android:textColor="#000000"
                android:textStyle="bold"
                android:onClick="buyButtonClicked"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/water_item"
                app:layout_constraintVertical_bias="0.761" />

            <Button
                android:id="@+id/itemBuy_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:onClick="buyButtonClicked"
                android:text="도장 2개"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#EAEAEA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemBuy_button1"
                app:layout_constraintTop_toBottomOf="@+id/sunshine_item"
                app:layout_constraintVertical_bias="0.736" />

            <Button
                android:id="@+id/itemBuy_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:onClick="buyButtonClicked"
                android:backgroundTint="#EAEAEA"
                android:text="도장 3개"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemBuy_button2"
                app:layout_constraintTop_toBottomOf="@+id/fertile_item"
                app:layout_constraintVertical_bias="0.736" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--상품 목록(소원권)-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wishlistConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/gameItemConstraintLayout">

            <!-- 상품 카테고리(소원권 목록)-->
            <Button
                android:id="@+id/wishlist_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="소원권 구매하기"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4A4A4A"
                android:backgroundTint="#00ff0000"
                style="?android:attr/borderlessButtonStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--구분선-->
            <View
                android:id="@+id/view2"
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8F8F8F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishlist_category" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wishlist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2">

                <Button
                    android:id="@+id/wish1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="- 놀이공원 가기 "
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="#000000"
                    android:gravity="left"></Button>

                <Button
                    android:id="@+id/wishBuyButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#C4D7BF"
                    android:text="     x 20"
                    android:textSize="15sp"
                    android:onClick="buyButtonClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wishlist2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishlist1">

                <Button
                    android:id="@+id/wish2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="- 스티커 사러가기 "
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="#000000"
                    android:gravity="left"/>

                <Button
                    android:id="@+id/wishBuyButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="#C4D7BF"
                    android:text="     x 5"
                    android:textSize="15sp"
                    android:onClick="buyButtonClicked"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




        <!--하단바 구성-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomBar_layout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="568dp"
            android:orientation="vertical"
            android:background="@drawable/bar_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--오른쪽 가이드라인-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="398dp" />

        <!--왼쪽 가이드라인-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--아래 가이드라인-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="70dp" />

    <ImageButton
        android:id="@+id/hamburgerButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:onClick="hamburgerMenu_Click"
        android:scaleType="centerInside"
        android:src="@drawable/hamburgerbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>