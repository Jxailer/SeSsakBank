<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".game.PlantGame">


    <androidx.cardview.widget.CardView
        android:id="@+id/game_cardView"
        android:layout_width="408dp"
        android:layout_height="183dp"
        android:background="#C4D7BF"
        android:backgroundTint="#C4D7BF"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <com.example.codevalley.game.CustomTextOutLineView xmlns:textoutline="http://schemas.android.com/apk/res/com.example.codevalley"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            textoutline:textStroke="true"
            textoutline:textStrokeColor="#6D9784"
            textoutline:textStrokeWidth="9.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_margin="58dp"
            android:layout_gravity="bottom"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="338dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:max="20"
            android:progressBackgroundTint="#DFE7CA"
            android:progressBackgroundTintMode="src_over"
            android:progressDrawable="@drawable/progressbar_custom"
            android:progressTint="#AE4F4D" />
        <!--        android:progress="20"  프로그레스바 시작을 20으로 하고 싶다면 이 코드 넣으면 됨.-->

        <Button
            android:id="@+id/btn_nameChange"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_margin="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#33FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:text="이름 변경"
            android:textColor="#99747468" />

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="58dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Lv."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_countLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="58dp"
            android:paddingLeft="22dp"
            android:fontFamily="@font/roboto_bold"
            android:text="1"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356"
        app:srcCompat="@drawable/final_sun" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/roboto_bold"
        android:text="개"
        android:textColor="#88BDA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toEndOf="@+id/tv_countFertilizer"
        app:layout_constraintTop_toBottomOf="@+id/btn_fertilizer"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/btn_water"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#D6E3CC"
        android:fontFamily="@font/roboto_bold"
        android:text="물"
        android:textColor="#6F9886"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776" />

    <TextView
        android:id="@+id/tv_countWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="0"
        android:textColor="#88BDA5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_water"
        app:layout_constraintVertical_bias="0.063" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598"
        app:srcCompat="@drawable/grass1" />

    <TextView
        android:id="@+id/tv_countSynthesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="1"
        android:textColor="#88BDA5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_synthesis"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/tv_countFertilizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="2"
        android:textColor="#88BDA5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fertilizer"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/roboto_bold"
        android:text="개"
        android:textColor="#88BDA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_countWater"
        app:layout_constraintTop_toBottomOf="@+id/btn_water"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/roboto_bold"
        android:text="개"
        android:textColor="#88BDA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_countSynthesis"
        app:layout_constraintTop_toBottomOf="@+id/btn_synthesis"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/btn_fertilizer"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#D6E3CC"
        android:fontFamily="@font/roboto_bold"
        android:text="비료"
        android:textColor="#6F9886"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_cardView"
        app:layout_constraintVertical_bias="0.776" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@drawable/grass2" />

    <Button
        android:id="@+id/btn_synthesis"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#D6E3CC"
        android:fontFamily="@font/roboto_bold"
        android:text="광합성"
        android:textColor="#6F9886"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_cardView"
        app:layout_constraintVertical_bias="0.776" />

    <ImageView
        android:id="@+id/imv_growingPlant"
        android:layout_width="115dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game_cardView"
        app:layout_constraintVertical_bias="0.573"
        app:srcCompat="@drawable/seed" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/hill" />


</androidx.constraintlayout.widget.ConstraintLayout>