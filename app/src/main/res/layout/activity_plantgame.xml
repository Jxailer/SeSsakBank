<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub1"
    android:backgroundTint="@color/sub1"
    tools:context=".game.PlantGame">

    <androidx.cardview.widget.CardView
        android:id="@+id/game_cardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#99BD87"
        android:backgroundTint="#99BD87"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <com.example.codevalley.game.CustomTextOutLineView xmlns:textoutline="http://schemas.android.com/apk/res/com.example.codevalley"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            textoutline:textStroke="true"
            textoutline:textStrokeColor="#397B18"
            textoutline:textStrokeWidth="9.0" />

        <Button
            android:id="@+id/btn_nameChange"
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#4DC4D9BA"
            android:fontFamily="@font/roboto_bold"
            android:text="이름 변경"
            android:textColor="#838c7e" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="left|center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:max="20"
            android:progressBackgroundTint="#FFFFFF"
            android:progressBackgroundTintMode="src_over"
            android:progressDrawable="@drawable/progressbar_custom"
            android:progressTint="#be3a20" />
        <!--        android:progress="20"  프로그레스바 시작을 20으로 하고 싶다면 이 코드 넣으면 됨.-->

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Lv."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_countLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="22dp"
            android:text="1"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:srcCompat="@drawable/final_sun" />

    <ImageView
