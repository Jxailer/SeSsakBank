<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp"
    tools:context="com.example.cpas004.BoardUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커뮤니티"
            android:padding="16dp"
            android:textStyle="bold"
            android:background="#C8E4B2"/>
        <EditText
            android:id="@+id/update_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:paddingBottom="20dp"
            android:paddingLeft="16dp"
            android:hint="제목을 입력하세요."/>

    </LinearLayout>

    <TextView
        android:id="@+id/writeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="내용" />

    <EditText
        android:id="@+id/update_write_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="#55C8E4B2"
        android:hint="내용을 입력하세요." />

    <Button
        android:id="@+id/writeUpdate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="게시글 수정하기"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:background="#7EAA92" />

</LinearLayout>