<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--현재 비번-->

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout2"
      android:layout_width="269dp"
      android:layout_height="64dp"
      android:layout_marginStart="72dp"
      app:errorEnabled="true"
      app:hintEnabled="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/현재비밀번호"
      app:passwordToggleEnabled="true">

    <EditText
        android:id="@+id/현재비번확인"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="현재비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textSize="16sp"
        tools:ignore="DuplicateIds" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/textInputLayout"
      android:layout_width="270dp"
      android:layout_height="63dp"
      android:layout_marginStart="72dp"
      android:layout_marginTop="15dp"
      android:background="@color/white"
      app:errorEnabled="true"
      app:hintEnabled="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/새비밀번호"
      app:passwordToggleEnabled="true">

    <EditText
        android:id="@+id/새비번입력란"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="새 비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/새비밀번호" />

  </com.google.android.material.textfield.TextInputLayout>

  <TextView
      android:id="@+id/비번조건"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="80dp"
      android:layout_marginTop="240dp"
      android:text="8자리 이상"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/새비밀번호"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginTop="216dp"
      android:hint="새 비밀번호와 동일하게 입력하세요."
      android:text="새 비밀번호"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/현재비밀번호"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginTop="76dp"
      android:text="현재 비밀번호"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <android.widget.Button
      android:id="@+id/비번확인버튼"
      android:layout_width="120dp"
      android:layout_height="46dp"
      android:layout_marginStart="157dp"
      android:layout_marginEnd="157dp"
      android:layout_marginBottom="176dp"

      android:clickable="false"
      android:onClick="onButton1Clicked"
      android:text="변경하기"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.444"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

