<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="22@naver.com"
            android:textSize="16sp"
            android:textColor="@color/a_dark" />

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="성지호"
            android:textSize="16sp"
            android:textColor="@color/a_dark" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="000000"
            android:textSize="16sp"
            android:textColor="@color/a_dark" />

        <TextView
            android:id="@+id/phone_numbaer"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="01012341234"
            android:textSize="16sp"
            android:textColor="@color/a_dark" />

        <TextView
            android:id="@+id/create_account_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="23-11-12"
            android:textSize="16sp"
            android:textColor="@color/a_dark" />

        <Button
            android:id="@+id/del_user"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/a_sub2"
            android:text="삭제"
            android:textColor="#BE3A20"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1" />


</LinearLayout>